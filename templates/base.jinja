<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="content-language" content="en">
    <meta charset='utf-8'> 
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" rel="stylesheet">
    {% block head %}{% endblock %}
  </head>
  <body ng-app="{% block ng_app %}churn.app{% endblock %}">
    <div class="content" ng-controller="{% block ng_controller %}AppController{% endblock %}">
    {% block content %}
    {% endblock %}
    </div>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.1/angular.min.js"></script>
    <script src="{{ static('js/main.js') }}"></script>
    <script>
      // Add the CSRF Token
      var app = angular.module('example.app'); // Not including a list of dependent modules (2nd parameter to `module`) "re-opens" the module for additional configuration
      app.config(['$httpProvider', function($httpProvider) {
          $httpProvider.defaults.headers.common['X-CSRFToken'] = '{{ csrf_token|escapejs }}';
      }]);
    </script>
  </body>
</html>
